import numpy as np
import matplotlib.pyplot as plt

df = 5 
size = 100
rep = 20000

var_all = []

for i in range(rep):
    sample = np.random.chisquare(df, size=size)
    var = np.var(sample)
    var_all.append(var)
    
plt.hist(var_all)

# print the variance, which ideally would be 2 df
print(min(var_all), max(var_all), np.mean(var_all), np.var(var_all))
